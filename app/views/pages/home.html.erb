<%= content_for(:navbar_class, "navbar-home") %>

<div class="banner" >
  <div class="banner-content">
    <%= form_tag recipes_path, class: "form-inline", method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Look for a recipe, an ingredient, a property...  "
    %>
    <%= submit_tag("Search", class: "btn btn-success", id: "search") %>
    <% end %>
  </div>
</div>

<div class="wrapper-grey padded">
  <div class="sugesstions container">
  </br>
    <h2 class="text-center">Discover our suggestions</h2>
    <div class="row ">
      <div class="col-xs-12 col-sm-4">
        <div class="card dry-hair">
          <%= link_to "", recipes_path(query: "dry hair"), class: "card-link" %>
          <div class="card-category"></div>
          <div class="card-description">
            <h3>For dry hair</h3>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <div class="card hair-fall">
          <%= link_to "", recipes_path(query: "hair fall"), class: "card-link" %>
          <div class="card-category">-</div>
          <div class="card-description">
            <h3>Falling hair</h3>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <div class="card oily">
          <%= link_to "", recipes_path(query: "oily skin"), class: "card-link" %>
          <div class="card-category">-</div>
          <div class="card-description">
            <h3>Oily skin</h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


