<div class="container-recipe">
   <div class="row">
    <h1 class="text-center">Recipes</h1>
    <% @recipes.each do |recipe| %>
    <div class="col-xs-12">
      <div class="card-recipe">
        <%= link_to "", recipe_path(recipe), class: "card-link" %>
        <div class="row">
          <div class="col-xs-4">
            <h1>**PHOTO HERE***</h1>
          </div>
        <div class= "col-xs-5">
          <div class="card-body">
            <h2><%= recipe.title %></h2>
            <hr>
            <h3><%= recipe.cost %></h3>
            <h3><%= recipe.purpose %></h3>
            <h3><%= recipe.difficulty %></h3>
          </div>
        </div>
      </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
