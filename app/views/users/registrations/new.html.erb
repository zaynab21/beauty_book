<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="container-login">
        <h2>Sign up</h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class=" form_sign form-inputs">
          <%= f.input :username, required: true, autofocus: true %>
          <%= f.input :email, required: true %>
          <div class="row">
          <div class="col-xs-5">
          <%= f.input :first_name %>
          </div>
          <div class="col-xs-5">
          <%= f.input :last_name %>
          </div>
          <div class="col-xs-2">
          <%= f.input :age %>
          </div>
          </div>
          <div class="row">
          <div class="col-xs-6">
          <%= f.input :skin_type, collection: ["Dry skin", "Normal skin", "Combination skin", "Oily skin"] %>
          </div>
          <div class="col-xs-6">
          <%= f.input :hair_type, collection: ["Dry hair", "Normal hair",  "Oily hair"] %>
          </div>
          </div>
          <%= f.input :description %>
          <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
          <%= f.input :photo %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn btn-success" %>
        </div>
        <% end %>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
